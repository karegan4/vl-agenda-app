<%= form_for @user, controller: 'users', action: 'create' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>

    <%= f.label :email %>
    <%= f.email_field :email %> <br><br>   
  
    <%= f.label :password %>
    <%= f.password_field :password %> <br><br>
  
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br><br><br>
  
    <%= f.submit "Submit" %>
<% end %>